#!/usr/bin/env bash

/usr/local/bin/getmail

# https://notmuchmail.org/initial_tagging/
notmuch new

notmuch tag -new +sent -- tag:new and from:dunn.alex@gmail.com
notmuch tag -new +sent -- tag:new and from:adunn@ucsb.edu

notmuch tag +campus -- tag:new and from:thecurrent@news.ucsb.edu
notmuch tag +lib -- tag:new and to:library@library.ucsb.edu
notmuch tag +pay -- tag:new and from:ppsddrtn@bfs.ucsb.edu

notmuch tag +emacs-devel -- tag:new and to:emacs-devel@gnu.org

# retag all "new" messages "inbox" and "unread"
notmuch tag +inbox +unread -new -- tag:new
