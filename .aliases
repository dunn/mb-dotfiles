alias shsm="shasum -a 256"

alias brwe="brew"
alias bi="brew reinstall -fs -v"
alias audt="brew audit --strict"
alias bug="brew update && brew upgrade --all"

# MISC
# ====

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

alias dater='date "+%Y-%m-%d"'
alias now='date "+%Y-%m-%d-%H%M%S"'

alias plain='pbpaste | pbcopy'
# Trim new lines and copy to clipboard
alias c="tr -d '\n' | pbcopy"

# brew install newsbeuter
alias nb='newsbeuter'
# brew install youtube-dl
alias yt='youtube-dl -i'
# brew install surfraw
alias ddg='sr duckduckgo -j'

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

alias pandork="pbpaste | pandoc -f markdown -t html5 -S | pbcopy"
alias htmark="pbpaste | iconv -c -t UTF-8 | pandoc -f html -t markdown"

# http://www.commandlinefu.com/commands/view/12221/convert-json-to-yaml
alias jaml="ruby -ryaml -rjson -e 'puts YAML.dump(JSON.parse(STDIN.read))'"
# http://stackoverflow.com/a/9741470
# http://stackoverflow.com/questions/1250079/escaping-single-quotes-within-single-quoted-strings
alias jimmy='echo "$(pbpaste | jaml)" "$(echo $'"'"'\n'"'"'---)" | pbcopy'
alias acorn='open -a /Applications/Acorn.app'
alias pngrind='pngquant -s 1 -v *.png --ext .png -f'

# Merge PDF files
# Usage: `mergepdf -o output.pdf input{1,2,3}.pdf`
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'
