# http://stevelosh.com/blog/2012/10/the-homely-mutt/

# Office-type documents
application/msword; ~/.mutt/view_attachment.sh %s "-" '/Applications/Pages.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.mutt/view_attachment.sh %s "-" '/Applications/Pages.app'
application/vnd.openxmlformats-officedocument.spreadsheetml.sheet; ~/.mutt/view_attachment.sh %s "-" '/Applications/Numbers.app'
application/vnd.oasis.opendocument.text; ~/.mutt/view_attachment.sh %s "-" '/Applications/TextEdit.app'

# Images
image/jpg; ~/.mutt/view_attachment.sh %s jpg
image/jpeg; ~/.mutt/view_attachment.sh %s jpg
image/pjpeg; ~/.mutt/view_attachment.sh %s jpg
image/png; ~/.mutt/view_attachment.sh %s png
image/gif; ~/.mutt/view_attachment.sh %s gif

# PDFs
application/pdf; ~/.mutt/view_attachment.sh %s pdf

# HTML
text/html; w3m -I %{charset} -T text/html; copiousoutput;
# text/html; ~/.mutt/view_attachment.sh %s html

# Unidentified files
application/octet-stream; ~/.mutt/view_attachment.sh %s "-"
